<%- include('./partials/header.ejs') %>
  <!-- Sidenav -->
  <%- include('./partials/sidenav.ejs') %>
    <!-- Main content -->
    <div class="main-content" id="panel">
      <!-- Topnav -->
      <%- include('./partials/navbar.ejs') %>
        <!-- Header -->
        <!-- Header -->
        <div class="header bg-primary pb-6">
          <div class="container-fluid">
            <div class="header-body">
              <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                  <h6 class="h2 text-white d-inline-block mb-0">MaThec</h6>
                  <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                    <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                      <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                      <li class="breadcrumb-item"><a href="#">Kuisioner</a></li>
                    </ol>
                  </nav>
                </div>
              </div>
              <!-- Card stats -->
              <div class="row">
                <div class="col">
                  <div class="card">
                    <!-- Card header -->
                    <div class="card-header">
                      <h3 class="mb-0">Data Kuisioner</h3>
                      <p class="text-sm mb-0">
                        Table untuk melihat data kuisioner yang telah diisi oleh user pada website MaThecApp
                      </p>
                    </div>
                    <div class="table-responsive py-4">
                      <table class="table table-flush" id="datatable-buttons">
                        <thead class="thead-light">
                          <tr>
                            <th>No.</th>
                            <th>Judul</th>
                            <th>Kategori</th>
                            <th>Nilai</th>
                            <th>Jumlah User</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% let no=1 %>
                            <% kuisioners.forEach(kuisioner=> { %>
                              <tr style="cursor:pointer"  
                                  data-toggle="modal" 
                                  data-target="#kuisioner-report-<%= kuisioner.id %>">
                                <td>
                                  <%= no++ %>
                                </td>
                                <td>
                                  <%= kuisioner.questioner %>
                                </td>
                                <td>
                                  <%= kuisioner.category.name %>
                                </td>
                                <td>1000</td>
                                <td>61</td>
                              </tr>
                              <%});%>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>

        <% kuisioners.forEach(kuisioner=> { %>
          <div class="modal fade" id="kuisioner-report-<%= kuisioner.id %>" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Detail Pertanyaan Kuisioner
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>name user</th>
                        <th>nilai</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th>Heri Setyawan</th>
                        <th>4</th>
                      </tr>
                      <tr>
                        <th>Perdana Putro H</th>
                        <th>3</th>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
            <!-- Page content -->

        <% kuisioners.forEach(kuisioner=> { %>
          <div class="modal fade" id="kuisioner-report" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Detail Pertanyaan Kuisioner
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>name user</th>
                        <th>nilai</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th>Heri Setyawan</th>
                        <th>4</th>
                      </tr>
                      <tr>
                        <th>Perdana Putro H</th>
                        <th>3</th>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          <% }) %>

    </div>
    <%- include('./partials/footer.ejs') %>
